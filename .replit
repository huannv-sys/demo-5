run = "npx tsx server/index.ts"
watch = ["server", "shared"]
channel = "stable"
modules = ["nodejs-20", "python-3.11", "python3"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "NodeServer"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "StreamlitUI"

[[workflows.workflow]]
name = "NodeServer"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node server.cjs"
waitForPort = 3000

[[workflows.workflow]]
name = "StreamlitUI"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app.py --server.port=5000"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "node server.cjs"]

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 5000
externalPort = 5000

